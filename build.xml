<project>
    <path id="classpath">
        <fileset dir="lib" includes="*.jar"/>
    </path>
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="build">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" classpathref="classpath"/>
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/SyncAction.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="org.wikipathways.SyncAction"/>
            </manifest>
        </jar>
    </target>

</project>